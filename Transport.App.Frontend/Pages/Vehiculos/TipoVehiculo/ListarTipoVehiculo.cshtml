@page
@model Transport.App.Frontend.Pages.ListarTipoVehiculoModel
@{
}
<div class="container">
    <div class="row">
        <div class="col-9">
            <h2 class="text-info">Lista  Tipo de Vehiculo</h2>
        </div>
        <div class="col-3">
            <a class="btn btn-secundary" asp-page="/Vehiculos/TipoVehiculo/CrearTipoVehiculo">Crear Nuevo  Tipo de Vehiculo</a>
        </div>
    </div>
    <br />
    <br />
    <table>
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">DESCRIPCION</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tipoVehiculo in Model.tipoVehiculos)
            {
                <tr>
                    <td>@tipoVehiculo.Id</td>
                    <td>@tipoVehiculo.Descripcion</td>
                    <td>
                         <a class="btn btn-primary table-btn" asp-page="./EditarTipoVehiculo"
                          asp-route-Id="@tipoVehiculo.Id">
                            <i class="fas fa-addrees-book fa-lg" aria-hidden="true">Editar</i>
                        </a>
                    </td>
                    <td>
                        <form method="post" asp-page-handler="Delete" asp-route-id="@tipoVehiculo.Id">
                            <button class="btn btn-danger">Eliminar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>