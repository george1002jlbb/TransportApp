@page
@model Transport.App.Frontend.Pages.ListarPersonaModel
@{
}
<div class="container">
    <div class="row">
        <div class="col-9">
            <h2 class="text-info">Lista de Usuarios</h2>
        </div>
        <div class="col-3">
            <a class="btn btn-secundary" asp-page="/Usuario/CrearPersona">Crear Nuevo Usuario</a>
        </div>
    </div>
    <br />
    <br />
    <table id="tblGenero" class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>TIPO DOCUMENTO</th>
                <th>NOMBRE</th>
                <th>APELLIDO</th>
                <th>ROL</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var persona in Model.personas)
            {
                <tr>
                    <td>@persona.Id</td>
                    <td>@persona.FkTipoDocumento</td>
                    <td>@persona.Nombre</td>
                    <td>@persona.Apellido</td>
                    <td>@persona.FkRol</td>
                    <td>
                         <a class="btn btn-primary table-btn" asp-page="./EditarPersona" asp-route-Id="@persona.Id">
                            <i class="fas fa-addrees-book fa-lg" aria-hidden="true">Editar</i>
                        </a>

                        <a class="btn btn-primary table-btn" asp-page="./#">
                            <i class="fas fa-info-circle">Eliminar</i>
                        </a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>