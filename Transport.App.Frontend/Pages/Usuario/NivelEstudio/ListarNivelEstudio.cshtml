@page
@model Transport.App.Frontend.Pages.ListarNivelEstudioModel
@{
}
<div class="container">
    <div class="row">
        <div class="col-9">
            <h2 class="text-info">Lista de Nivel Estudio</h2>
        </div>
        <div class="col-3">
            <a class="btn btn-secundary" asp-page="/Usuario/NivelEstudio/CrearNivelEstudio">Crear Nuevo Nivel
                Estudio</a>
        </div>
    </div>
    <br />
    <br />
    <table>
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">DESCRIPCION</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var nivelEstudio in Model.nivelEstudios)
            {
                <tr>
                    <td>@nivelEstudio.Id</td>
                    <td>@nivelEstudio.Descripcion</td>
                    <td>
                        <a class="btn btn-primary table-btn" asp-page="./EditarNivelEstudio"
                        asp-route-Id="@nivelEstudio.Id">
                            <i class="fas fa-addrees-book fa-lg" aria-hidden="true">Editar</i>
                        </a>
                    </td>
                    <td>
                        <form method="post" asp-page-handler="Delete" asp-route-id="@nivelEstudio.Id">
                            <button class="btn btn-danger">Eliminar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>