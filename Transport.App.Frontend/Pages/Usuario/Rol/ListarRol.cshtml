@page
@model Transport.App.Frontend.Pages.ListarRolModel
@{
}
<div class="container">
    <div class="row">
        <div class="col-9">
            <h2 class="text-info">Lista de Roles</h2>
        </div>
        <div class="col-3">
            <a class="btn btn-secundary" asp-page="/Usuario/Rol/CrearRol">Crear Nuevo Rol</a>
        </div>
    </div>
    <br />
    <br />
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>DESCRIPCION</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var rol in Model.roles)
            {
                <tr>
                    <td>@rol.Id</td>
                    <td>@rol.Descripcion</td>
                    <td>
                         <a class="btn btn-primary table-btn" asp-page="./EditarRol" asp-route-Id="@rol.Id">
                            <i class="fas fa-addrees-book fa-lg" aria-hidden="true">Editar</i>
                        </a>

                    </td>
                    <td>
                        <form method="post" asp-page-handler="Delete" asp-route-id="@rol.Id">
                            <button class="btn btn-danger">Eliminar</button>
                        </form>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>