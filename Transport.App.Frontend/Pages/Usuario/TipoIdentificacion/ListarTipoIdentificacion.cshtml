@page
@model Transport.App.Frontend.Pages.ListarTipoIdentificacionModel
@{
}
<div class="container">
    <div class="row">
        <div class="col-9">
            <h2 class="text-info">Lista de Tipos de Identificacion</h2>
        </div>
        <div class="col-3">
            <a class="btn btn-secundary" asp-page="/Usuario/TipoIdentificacion/CrearTipoIdentificacion">Crear Nuevo Tipo Identificacion</a>
        </div>
    </div>
    <br />
    <br />
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>DESCRIPCION</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tipoIdentificacion in Model.tipoIdentificaciones)
            {
                <tr>
                    <td>@tipoIdentificacion.Id</td>
                    <td>@tipoIdentificacion.Descripcion</td>
                    <td>
                         <a class="btn btn-primary table-btn" asp-page="./EditarTipoIdentificacion" asp-route-Id="@tipoIdentificacion.Id">
                            <i class="fas fa-addrees-book fa-lg" aria-hidden="true">Editar</i>
                        </a>

                    </td>
                    <td>
                        <form method="post" asp-page-handler="Delete" asp-route-id="@tipoIdentificacion.Id">
                            <button class="btn btn-danger">Eliminar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>