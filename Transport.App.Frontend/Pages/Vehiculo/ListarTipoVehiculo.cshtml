@page
@model Transport.App.Frontend.Pages.ListarTipoVehiculoModel
@{
}
<div class="container">
    <div class="row">
        <div class="col-9">
            <h2 class="text-info">Lista de Tipo de Vehiculo</h2>
        </div>
        <div class="col-3">
            <a class="btn btn-secundary" asp-page="/Vehiculo/crearTipoVehiculo">Crear Nuevo Tipo Vehiculo</a>
        </div>
    </div>
    <br />
    <br />
    <table id="tblTVehiculo" class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>DESCRIPCION</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tipoVehiculo in Model.tipoVehiculos)
            {
                <tr>
                    <td>@tipoVehiculo.Id</td>
                    <td>@tipoVehiculo.Descripcion</td>
                    <td>
                         <a class="btn btn-primary table-btn" asp-page="./editarTipoVehiculo" asp-route-Id="@tipoVehiculo.Id">
                            <i class="fas fa-addrees-book fa-lg" aria-hidden="true">Editar</i>
                        </a>

                        <a class="btn btn-primary table-btn" asp-page="./#">
                            <i class="fas fa-info-circle">Eliminar</i>
                        </a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>