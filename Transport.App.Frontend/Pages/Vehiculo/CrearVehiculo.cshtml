@page
@model Transport.App.Frontend.Pages.CrearVehiculoModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
   <h1>CREANDO VEHICULO </h1>
</head>
<body>
<div class="container">
        <form>
            
            <div class="mb-3">
                <label for="formGroupExampleInput" class="form-label">Id</label>
                <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Ingrese Id">
            </div>
    
            <select class="form-select" aria-label="Default select example">
                <option selected>Escoja Tipo de Vehiculo</option>
                <option value="1">Buseta</option>
                <option value="2">Microbus</option>
            </select>
            <div class="mb-3">
                <label for="formGroupExampleInput" class="form-label">Placa</label>
                <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Ingrese placas del Vehiculo">
            </div>
           <div class="mb-3">
                <label for="formGroupExampleInput" class="form-label">Marca</label>
                <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Ingrese el Modelo">
            </div>
           <div class="mb-3">
                <label for="formGroupExampleInput" class="form-label">Modelo</label>
                <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Ingrese el Modelo">
            </div>
            <div class="mb-3">
                <label for="formGroupExampleInput" class="form-label">Capacidad</label>
                <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Ingrese Capacidad de Pasajeros">
            </div>
           <div class="mb-3">
                <label for="formGroupExampleInput" class="form-label">Descripcion</label>
                <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Ingrese Descripciones - Pais de Origen - color etc">
            </div>
                
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</body>
</html>